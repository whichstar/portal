<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config.dtd">
<generatorConfiguration>
    <!-- 数据库驱动:选择你的本地硬盘上面的数据库驱动包-->
    <context id="MySQL" targetRuntime="com.weidai.mybatis.IntrospectedTableMyBatis3ImplExt">                 <!-- 此配置请忽更改，若要更改请确保对该配置的理解-->
        <property name="suppressAllComments" value="true"/>
        <property name="useActualColumnNames" value="false"/>

        <!-- 生成作者 -->
        <property name="author" value="whichstar"/>                                                         <!-- value 中值表示 生成该.java文件（主要是Mapper接口）的作者，请自行修改-->

        <!-- 不需要在mapper.xml中声明 jdbcType -->
        <property name="suppressColumnType" value="true"/>                                                     <!-- mapper.xml中是否生成jdbcType -->

        <!-- 格式化java代码 -->
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>

        <!-- 格式化XML代码 -->
        <property name="xmlFormatter" value="com.weidai.mybatis.dom.formatter.WdXmlFormatter"/>                <!-- mapper.xml 格式化类，此配置请忽更改，若要更改请确保对该配置的理解 -->

        <!-- 生成Java文件编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>                                                    <!-- 指定生成的 .java 文件的编码 -->

        <!-- 配置插件 1.1.0版本之后变为WdMysqlClientGeneratorPlugin-->
        <!-- <plugin type="com.weidai.mybatis.MysqlPaginationPlugin"/> -->
        <plugin type="com.weidai.mybatis.WdMysqlClientGeneratorPlugin"/>                                     <!-- Mapper接口生成插件，此配置请忽更改，若要更改请确保对该配置的理解 -->


        <commentGenerator type="com.weidai.mybatis.generator.CNCommentGenerator">                            <!-- 各成员变量、类文件，此配置请忽更改，若要更改请确保对该配置的理解 -->
            <!-- 是否去除自动生成的注释 true：是； false:否 -->
            <property name="suppressAllComments" value="true"/>
            <property name="author" value="whichstar"/>                                                   <!-- value 中值表示 生成该.java文件（主要是持久化实体类、Mapper接口）的作者，请自行修改-->
        </commentGenerator>

        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://47.99.215.76:3306/sms_platform" userId="root" password="root">
        </jdbcConnection>

        <javaTypeResolver type="com.weidai.mybatis.generator.resolver.WdCoustomJavaTypeResolver">
            <property name="forceBigDecimals" value="false"/>
            <property name="jdbcType.TINYINT" value="java.lang.Integer"/>
        </javaTypeResolver>
        <!-- 配置model生成位置 -->
        <javaModelGenerator targetPackage="com.gxkj.portal.dal.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 配置sqlmap生成位置 -->
        <sqlMapGenerator targetPackage="/mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 配置mapper接口生成位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.gxkj.portal.dal.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 请自行更改 -->
        <table tableName="sys_role_authority" domainObjectName="SysRoleAuthority"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="Mysql" type="post" identity="true"/>
        </table>
    </context>
</generatorConfiguration>